<%= form_for(message) do |f| %>
  <% if message.errors.any? %>
    <div id='error_exlanation'>
      <ul>
        <% message.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  
    <%= f.label :content, 'Message' %>
    <%= f.text_field :content %>
  
    <%= f.submit 'Submit' %>
<% end %>
